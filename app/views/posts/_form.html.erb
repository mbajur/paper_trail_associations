<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <label>Tags</label>
    <% Tag.all.each do |tag| %>
        <div class="col-md-4">
          <div class="checkbox">
            <label>
              <%= check_box_tag :tag_ids, tag.id, @post.tags.include?(tag), name: 'post[tag_ids][]' %>
              <%= tag.name %>
            </label>
          </div>
        </div>
      <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
